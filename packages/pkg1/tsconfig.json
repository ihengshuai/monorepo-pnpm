{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": ["esnext", "dom","DOM.Iterable"],
    "types": ["vite/client", "node", "jest"],
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "declaration": true,
    "declarationDir": "dist/types",
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "__tests__/**/*.ts"],
}
