{
  "name": "monorepo-pnpm",
  "description": "a monorepo project template use pnpm.",
  "private": true,
  "license": "MIT",
  "scripts": {
    "docs:dev": "pnpm scripts run docs",
    "dev": "pnpm scripts run dev",
    "build": "pnpm scripts run build",
    "test:unit": "pnpm scripts run test:unit",
    "scripts": "better-scripts",
    "release": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "preinstall": "npx only-allow pnpm",
    "precommit": "lint-staged",
    "postinstall": "husky install",
    "lint": "lint-staged"
  },
  "keywords": [
    "monorepo",
    "monorepo template"
  ],
  "author": {
    "name": "ihengshuai",
    "email": "wsm_1105@163.com",
    "url": "https://github.com/ihengshuai"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ihengshuai/monorepo-pnpm.git"
  },
  "homepage": "https://github.com/ihengshuai/monorepo-pnpm",
  "bugs": {
    "url": "https://github.com/ihengshuai/monorepo-pnpm/issues"
  },
  "lint-staged": {
    "packages/**/{*.vue,*.js,*.ts,*.jsx,*.tsx}": "eslint --fix",
    "packages/**/*.scss": "stylelint --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@types/node": "^20.5.4",
    "@typescript-eslint/eslint-plugin": "^5.2.1",
    "@typescript-eslint/parser": "^5.2.1",
    "better-scripts": "^0.4.3",
    "conventional-changelog-cli": "^3.0.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^12.2.3",
    "prettier": "^3.0.2",
    "stylelint": "^15.10.2",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-scss": "^5.1.0"
  }
}
